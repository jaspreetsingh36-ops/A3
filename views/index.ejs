<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-trophy-fill"></i> India Cricket Stats
            </a>
            <div class="navbar-nav ms-auto">
                <% if (isAuthenticated && user) { %>
                    <div class="d-flex align-items-center">
                        <span class="text-light me-3">Welcome, <%= user.displayName %></span>
                        <a class="btn btn-outline-light btn-sm me-2" href="/players">
                            <i class="bi bi-people"></i> Players
                        </a>
                        <a class="btn btn-outline-warning btn-sm" href="/auth/logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                <% } else { %>
                    <div class="d-flex">
                        <% if (process.env.GOOGLE_CLIENT_ID && process.env.GOOGLE_CLIENT_ID !== 'dummy-google-client-id') { %>
                            <a class="btn btn-outline-light btn-sm me-2" href="/auth/google">
                                <i class="bi bi-google"></i> Google
                            </a>
                        <% } %>
                        <% if (process.env.GITHUB_CLIENT_ID && process.env.GITHUB_CLIENT_ID !== 'dummy-github-client-id') { %>
                            <a class="btn btn-outline-light btn-sm me-2" href="/auth/github">
                                <i class="bi bi-github"></i> GitHub
                            </a>
                        <% } %>
                        <!-- Demo login -->
                        <form action="/auth/local" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-person"></i> Demo Login
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        <div class="text-center">
            <h1 class="display-4 mb-4">üèè India Cricket Team Statistics</h1>
            <p class="lead mb-5">Track and manage player statistics for the Indian cricket team</p>
            
            <% if (isAuthenticated && user) { %>
                <div class="alert alert-success mx-auto" style="max-width: 500px;">
                    <h4><i class="bi bi-check-circle-fill"></i> Successfully Logged In!</h4>
                    <p class="mb-0">Welcome, <strong><%= user.displayName %></strong>!</p>
                </div>
                <a href="/players" class="btn btn-success btn-lg">
                    <i class="bi bi-speedometer2"></i> Go to Players Dashboard
                </a>
            <% } else { %>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-lock-fill"></i> Login Required
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Please login to access player statistics.</p>
                                
                                <div class="d-grid gap-2">
                                    <% if (process.env.GOOGLE_CLIENT_ID && process.env.GOOGLE_CLIENT_ID !== 'dummy-google-client-id') { %>
                                        <a href="/auth/google" class="btn btn-danger btn-lg">
                                            <i class="bi bi-google"></i> Continue with Google
                                        </a>
                                    <% } %>
                                    
                                    <% if (process.env.GITHUB_CLIENT_ID && process.env.GITHUB_CLIENT_ID !== 'dummy-github-client-id') { %>
                                        <a href="/auth/github" class="btn btn-dark btn-lg">
                                            <i class="bi bi-github"></i> Continue with GitHub
                                        </a>
                                    <% } %>
                                    
                                    <!-- Demo login form -->
                                    <form action="/auth/local" method="POST" class="d-grid">
                                        <button type="submit" class="btn btn-info btn-lg">
                                            <i class="bi bi-person"></i> Try Demo Login
                                        </button>
                                    </form>
                                </div>
                                
                                <% if (!process.env.GOOGLE_CLIENT_ID || process.env.GOOGLE_CLIENT_ID === 'dummy-google-client-id') { %>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle"></i>
                                            OAuth not configured. Using demo authentication.
                                        </small>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
</body>
</html>
